@model E_Commerce.Models.Orders
@using Microsoft.Extensions.Options
@inject IOptions<E_Commerce.Data.StripeSetting> Stripe
@using E_Commerce.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");
    Products product = null;
    if (products==null)
    {
        products = new List<Products>();
    }
}
@{
    ViewData["Title"] = "Order Details";
}

<br />

<h2 class="text-info">Order Details</h2>
<form asp-action="Checkout" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Phone"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Phone"  class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="CategoryId" asp-items="ViewBag.productTypeId" class="form-control"></select>*@
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                
            </div>

            <input asp-for="Total" class="form-control" value="@products.Sum(c=>c.Price*c.Quantity)" type="hidden"/>
            <input asp-for="Token" class="StripeToken" type="hidden"/>
                
            </div>
         <div class="col-6">
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="BillingTo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="BillingTo" class="form-control" />
                    <span asp-validation-for="BillingTo" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShipTo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShipTo" class="form-control" />
                    <span asp-validation-for="ShipTo" class="text-danger"></span>
                </div>
                
            </div>
         </div>
    </div>
        <div class="col-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                
                @foreach(var items in products)
                    {
                        <tr>
                            <td><img src="~/@items.Image" height="100px" width="70px"/></td>
                            <td>@items.Name</td>
                            <td>@items.Price</td>
                            <td>@items.Quantity</td>
                           
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-end">
                <h3 >Total Price: $ @products.Sum(c=>c.Price*c.Quantity)</h3>
                <h3 class="text-danger">@ViewBag.message</h3>
            @if(products.Sum(c=>c.Price*c.Quantity)>0){
                <script src="//checkout.stripe.com/v2/checkout.js"
                        class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-loacale="auto"
                        data-description="Sample Charge">
                </script>
            }
            </div>
        </div>
        


</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*<script>
        $(document).ready(function(){
            $("#OrderDate").datepicker();
        })
    </script>*@
}


