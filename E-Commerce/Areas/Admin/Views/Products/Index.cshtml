@using E_Commerce.Models
@model IEnumerable<Products>

@{
    ViewData["Title"] = "Index";
}
<br>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa fa-plus"></i>&nbsp;Add New Product</a>
    </div>
</div>
<br>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.ProductColor)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(c=>c.CategoryId)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductColor</td>
                <td>@item.IsAvailable</td>
                <td>@item.Category.CategoryName</td>
                <partial name="_ButtonPartial" model="@item.Id">
            </tr>
        }
    </table>
</div>
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        var save = '@TempData["save"]'
        if (save != null) {
            $(function () { alertify.success(save); })
        }
        var update = '@TempData["update"]'
        if (update != null) {
            $(function () { alertify.success(update); })
        }
        var delete= '@TempData["delete"]'
        if (delete!= null) {
            $(function () { alertify.success(delete); })
        }

    </script>
}