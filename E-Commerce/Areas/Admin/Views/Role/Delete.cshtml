@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete Role</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3 class="text-danger">Do you want to delete this role???</h3>
        <h3 class="text-danger">@ViewBag.message</h3>

        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input type="hidden" name="id" value="@ViewBag.id" />
                <input readonly="readonly" name="name" id="name" value="@ViewBag.name" class="form-control" required />

            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to list</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }